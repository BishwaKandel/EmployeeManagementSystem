@model IEnumerable<EmployeeMS.Models.Employee>

@{
    ViewBag.Title = "Employee List";
}

        <table border="1" cellpadding="5" cellspacing="0">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Department</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model)
                {
                    <tr>
                        <td>@employee.Name</td>
                        <td>@employee.Email</td>
                        <td>@employee.Department</td>
                    </tr>
                }
		</tbody>
		</tbody>
   