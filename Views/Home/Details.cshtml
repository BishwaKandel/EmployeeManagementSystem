@model HomeDetailsViewModel

@{
    ViewBag.Title = "Employee Details";
}

<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">@Model.PageTitle</h3>
        </div>
        <div class="card-body">
            <p><strong>Name:</strong> @Model.Employee.Name</p>
            <p><strong>Email:</strong> @Model.Employee.Email</p>
            <p><strong>Department:</strong> @Model.Employee.Department</p>

            <div class="mt-4">
                <a asp-controller="home" asp-action="index" 
                   class="btn btn-sm btn-warning me-1">Back</a>
                <a href="@Url.Action("Edit", "Home", new { id = Model.Employee.Id })" class="btn btn-warning me-2">Edit</a>
                <form asp-action="Delete" asp-controller="Home" asp-route-id="@Model.Employee.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this employee?');">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/customscript.js"></script>
}
